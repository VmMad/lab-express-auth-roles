<div class="container">
    <ul>
        {{#each allStudents}}
        <li class="eachstudent">
            {{this.username}}
            <div class="liststudentsbuttons">
                <a href="/students/{{_id}}"><button class="btn btn-primary">View profile</button></a>
                {{#if ../PM}}
                <form action="/students/{{_id}}/delete" method="POST">
                    <button class="btn btn-danger">
                        DELETE
                    </button>
                </form>
                <form action="/students/{{_id}}/edit" method="POST">
                    <button class="btn btn-warning">
                        EDIT
                    </button>
                </form>
                {{/if}}
            </div>
        </li>
        {{/each}}
    </ul>
</div>